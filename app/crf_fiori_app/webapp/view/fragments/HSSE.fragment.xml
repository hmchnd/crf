            </smartForm:GroupElement>
            <smartForm:GroupElement label="Low">
                <smartField:SmartField value="{HSSE_Risk}" id="idHSSEIfluencekLow" mandatory="true">
                    <smartField:configuration>
                        <smartField:Configuration controlType="selection" />
